<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.ReportDetailActivity">

    <data>
        <variable
            name="viewModel"
            type="edu.bluejack23_1.nowlocate.viewModels.ReportDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:backgroundTint="@color/gray"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:text="@string/report_detail"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivItemImage"
                android:src="@drawable/baseline_camera_alt_24"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemName"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold"
                android:textStyle="bold"
                android:text="@={viewModel.reportName}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp" />

            <TextView
                android:id="@+id/tvCategory"
                android:fontFamily="@font/open_sans"
                android:text="@={viewModel.category}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/tvShortDescription"
                android:fontFamily="@font/open_sans"
                android:text="@={viewModel.shortDescription}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_bold"
                android:textStyle="bold"
                android:text="@string/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:fontFamily="@font/open_sans"
                android:text="@={viewModel.description}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_bold"
                android:textStyle="bold"
                android:text="@string/last_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/tvLastSeen"
                android:fontFamily="@font/open_sans"
                android:text="@={viewModel.lastSeen}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:src="@drawable/baseline_person_black_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvReportedBy"
                    android:text="@={viewModel.reportedBy}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvReportedAt"
                    android:text="@={viewModel.reportedAt}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDelete"
                android:src="@drawable/baseline_delete_black_24"
                android:contentDescription="@string/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageButton
                android:id="@+id/btnDynamic"
                android:src="@drawable/baseline_edit_black_24"
                android:contentDescription="@string/dynamic_button"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvReport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivReportImage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_person_24"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|start">
                <TextView
                    android:id="@+id/tvReportName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Name"/>
                <TextView
                    android:id="@+id/tvReportCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Category"/>
                <TextView
                    android:id="@+id/tvReportShortDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Short Description"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:layout_gravity="end"/>
        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>